{
  "name": "farm-plugin-singlefile",
  "version": "0.0.1",
  "description": "Farm plugin to inline all JS, CSS, media into one index.html file",
  "repository": "github:portalcorp/farm-plugin-singlefile",
  "main": "./dist/cjs/index.cjs",
  "types": "./dist/esm/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "default": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.cjs",
      "import": "./dist/esm/index.mjs",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "scripts": {
    "build:cjs": "cross-env FARM_FORMAT=cjs farm build",
    "build": "farm build && npm run build:cjs",
    "start": "farm watch",
    "dev": "farm watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "farm",
    "farm-plugin",
    "farm-plugin-singlefile",
    "singlefile",
    "single file",
    "single-file",
    "inline",
    "css",
    "SPA"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "@farmfe/core": "^1.2.8"
  },
  "devDependencies": {
    "@farmfe/cli": "^1.0.1",
    "@farmfe/js-plugin-dts": "^0.5.1",
    "@types/node": "^20.11.16",
    "cross-env": "^7.0.3"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@types/micromatch": "^4.0.9",
    "@types/mime-types": "^2.1.4",
    "micromatch": "^4.0.7",
    "mime-types": "^2.1.35"
  }
}
